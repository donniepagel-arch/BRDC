rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Tournaments - Public read
    match /tournaments/{tournamentId} {
      allow read: if true;
      allow write: if request.auth != null || request.resource.data.director_pin != null;
    }
    
    // SUBCOLLECTIONS - Need explicit wildcard path
    match /tournaments/{tournamentId}/events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /tournaments/{tournamentId}/registrations/{regId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if request.auth != null;
    }
    
    match /tournaments/{tournamentId}/matches/{matchId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Top-level collections
    match /events/{eventId} {
      allow read: if true;
    }
    
    match /matches/{matchId} {
      allow read: if true;
    }
    
    match /registrations/{regId} {
      allow read: if true;
      allow create: if true;
    }
    
    match /leagues/{leagueId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /league_matches/{matchId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /league_registrations/{regId} {
      allow read: if true;
      allow create: if true;
    }
    
    match /league_teams/{teamId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
