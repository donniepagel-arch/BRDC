{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/dashboard", "destination": "/pages/dashboard.html" },
      { "source": "/profile", "destination": "/pages/player-profile.html" },
      { "source": "/messages", "destination": "/pages/messages.html" },
      { "source": "/friends", "destination": "/pages/friends.html" },
      { "source": "/events", "destination": "/pages/community-events.html" },
      { "source": "/schedule", "destination": "/pages/schedule.html" },
      { "source": "/scorer", "destination": "/pages/scorer-hub.html" },
      { "source": "/match-hub", "destination": "/pages/match-hub.html" },
      { "source": "/league", "destination": "/pages/league-view.html" },
      { "source": "/register", "destination": "/pages/register.html" },
      { "source": "/login", "destination": "/index.html" },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  },
  "firestore": {
    "database": "(default)",
    "location": "nam5",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
